page {
  background: #f3f3f3;
}

#address_cell {
  margin: 20rpx 30rpx;
}

.cell_title {
  font-weight: 700;
}

.van-cell {
  padding: var(--cell-vertical-padding, 10px) var(--cell-horizontal-padding, 4px) !important;
}

#commodity {
  margin: 0 30rpx;
  background: #fff;
}
.van-card__price {
color: var(--card-price-color,#111)!important;

}

.van-card__content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.van-card{
  padding: var(--card-padding,8px 15px)!important;

}
.van-divider {
  margin: var(--divider-margin, of 0px 0) !important;
}

#bottom {
  background: #fff;
  padding: 0 30rpx;
  margin: 20rpx 30rpx 120rpx 30rpx;
}

.bottom_flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}
.bottom {
    position: fixed;
    bottom: 0;
    width: 750rpx;
    height: 120rpx;
    border-top: 1rpx solid #ebedf0;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 2rpx 0px 0px rgba(229, 229, 229, 1);
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    z-index: 99;
}
button:not([size='mini']) {
    width: 400rpx;
    margin-left: auto;
    margin-right: auto;
    color: #fff;
    font-size: 34rpx;
}

